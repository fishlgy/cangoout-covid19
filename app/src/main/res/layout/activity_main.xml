<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutNric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:errorTextColor="@color/red"
        app:errorIconDrawable="@drawable/ic_warning_24dp"
        app:errorEnabled="true"
        android:paddingTop="8dp"
        android:paddingLeft="9dp"
        android:layout_margin="15dp">
        <EditText
            android:id="@+id/etNric"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            tools:text="Test NRIC"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:hint="Please enter NRIC/ FIN"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="NEXT"
        android:textColor="@color/red"
        android:drawableRight="@drawable/ic_arrow_forward_24dp"
        android:layout_alignEnd="@id/inputLayoutNric"
        android:layout_below="@id/inputLayoutNric"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTitleDescription"
        android:text="CCB"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textFontWeight="2"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/tvTitleDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTitle2"
        android:textColor="@color/red"
        android:layout_marginTop="-10dp"
        android:text="Comprehensive Circuit Breaker"
        android:textSize="12dp"
        android:textFontWeight="2"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDescription"
        android:text="Can I go anot?"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textFontWeight="2"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputLayoutNric"
        android:textColor="#454545"
        android:text="Enter NRIC to find out if you can go market today."
        android:textSize="12dp"
        android:textFontWeight="2"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:textSize="10sp"
        android:textColor="@color/colorPrimaryDark"
        tools:text="version 1.1.10"
        />
    
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible"
        />
</RelativeLayout>